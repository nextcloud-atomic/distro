#!/bin/bash

set -eux

mkdir -p "${BUILDROOT}/usr/share/extensions.default"/{confexts,extensions}

IFS=, read -a sysexts <<<"$SYSEXTS"
IFS=, read -a confexts <<<"$CONFEXTS"

for ext in "${confexts[@]}"
do
  cp "${ext}" "${BUILDROOT}/usr/share/extensions.default/confexts/"
done
for ext in "${sysexts[@]}"
do
  cp "${ext}" "${BUILDROOT}/usr/share/extensions.default/extensions/"
done
